{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ES2022",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    // Tell ts-node CLI to install the --loader automatically
    "esm": true
  }
}
